<UserControl x:Class="Client.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="750" 
             >

    <Grid x:Name="DurakRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Background Image-->
        <DockPanel Grid.Row="1" Grid.RowSpan="7" Grid.ColumnSpan="5">
            <Image Source="/Resources/Background/background.png" Stretch="Fill"/>
        </DockPanel>

        <!--AI Playing Field-->
        <Canvas  x:Name="pnlAIHand" Height="139" Width="400" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
        <Label  x:Name="lblAi" Content ="{Binding AiPlayer.PlayerName}" Style="{DynamicResource GameViewLabel}" Grid.ColumnSpan="2" Margin="25,0,125,60" Grid.Row="1" Grid.Column="1"/>
        <!--<ItemsControl Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" ItemsSource="{Binding AiCards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas x:Name="pnlAIHand" Height="139" Width="400"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left"/>
                    <Setter />
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image Height="107" Width="75" Source="{Binding CardImage.Source}"></Image>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>-->

        <!--River!-->
        <Canvas  x:Name="pnlRiver" Height="107" Width="400" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="3" Grid.Column="1" Margin="25,10,25,71" />

        <!--Player 1 Playing Field-->
        <Canvas  x:Name="pnlPlayerHand" Height="139" Width="400" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="3" Margin="25,9,25,40"/>
        <Label  x:Name="lblPlayer" Content ="{Binding HumanPlayer.PlayerName}" Style="{DynamicResource GameViewLabel}" Grid.ColumnSpan="2" Margin="25,54,125,5" Grid.Row="6" Grid.Column="1"/>

        <!--Deck-->
        <Canvas  x:Name="pnlDeck" Height="107" Width="120" Grid.Row="3" Grid.RowSpan="2" Grid.Column="5" />
        <Image Source="/Resources/Pack/gray_back.png" Height="107" Width="75" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="4" Grid.Row="3" Grid.RowSpan="2"/>

        <!--Game Log-->
        <Rectangle Fill="Black" Opacity="0.3" Height="139" Stroke="Black" Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,25"/>
        <Label  x:Name="lblDeckSize" Content="{Binding CurrentDeckSize}" Grid.Row="1" Grid.Column="3" Style="{DynamicResource GameViewLabel}" Grid.ColumnSpan="2" Margin="0,49,100,70" Grid.RowSpan="2" />
        <Label  x:Name="lbl1" Content="{Binding Attacker.PlayerName}" Grid.Row="1" Grid.Column="3" Style="{DynamicResource GameViewLabel}" Grid.ColumnSpan="2" Margin="0,25,100,0" />
        <Label  x:Name="lblPass" Content="" Grid.Column="3" Style="{DynamicResource GameViewLabel}" HorizontalAlignment="Left" Margin="0,71.667,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="2" Height="31" Width="164" Grid.ColumnSpan="2"/>
        <Label  x:Name="lblAIThink" Content="" Grid.Column="3" Grid.Row="1" Style="{DynamicResource GameViewLabel}" HorizontalAlignment="Left" Margin="0,91.667,0,0" VerticalAlignment="Top" Height="27" Width="174" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Label  x:Name="lblChosenCard" Content="" Grid.Column="3" Grid.Row="2" Style="{DynamicResource GameViewLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Width="138" Margin="0,22,0,0"/>
        <Label  x:Name="lblTotal" Content="" Grid.Column="3" Grid.Row="2" Style="{DynamicResource GameViewLabel}" HorizontalAlignment="Left" Margin="1,39,0,0" VerticalAlignment="Top" Height="31" Width="199" Grid.ColumnSpan="2"/>

        <!--Buttons-->
        <Button  x:Name="btnPass" Content="Pass" Grid.Row="5" Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="2" Style="{DynamicResource DurakPassButton}" Margin="0,24,0,-24" Click="btnPass_Click"/>
        <Button  x:Name="btnDealNew" Content="New Game" Grid.Row="4" Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan="2" Style="{DynamicResource DurakDealNewButton}" Margin="0,67,0,27" Click="btnDealNew_Click"/>

        <!--Content Control-->
        <!--<ContentControl Grid.RowSpan="7" Grid.ColumnSpan="5" Content="{Binding}"/>-->

    </Grid>

</UserControl>
