<UserControl x:Class="Client.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="800">

    <Grid x:Name="DurakRoot">
        <Image Source="/Resources/Background/background.png" Stretch="Fill"/>

        <Image x:Name="imgPlayingCard"  Height="107" Width="70" Margin="295,178,277,184">
            <Image.RenderTransform>
                <TranslateTransform X="{Binding MyXValue}" Y="{Binding MyYValue}" />
            </Image.RenderTransform>
        </Image>
        <Image x:Name="imgPlayingCard1"  Height="107" Width="70" Margin="295,178,277,184">
            <Image.RenderTransform>
                <TranslateTransform X="{Binding MyXValue}" Y="{Binding MyYValue}" />
            </Image.RenderTransform>
        </Image>
        <Canvas  x:Name="pnlPlayingField" HorizontalAlignment="Left" Height="139" Margin="139,137,0,0" VerticalAlignment="Top" Width="400"/>
        <Canvas  x:Name="pnlPlayerHand" HorizontalAlignment="Left" Height="139" Margin="139,276,0,0" VerticalAlignment="Top" Width="400"/>
        <Canvas  x:Name="pnlAIHand" HorizontalAlignment="Left" Height="139" Margin="209,34,0,0" VerticalAlignment="Top" Width="400"/>

    </Grid>

</UserControl>
