<Window x:Class="Client.DurakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Durak" Height="500" Width="650" MinHeight ="300" MinWidth="450" Icon="/Resources/Background/icon.png">

    <Grid x:Name="DurakRoot">
        <Image Source="/Resources/Background/background.png" Stretch="Fill"/>
        <Image x:Name="imgPlayingCard"  Height="107" Width="70" Margin="295,178,277,184">
            <Image.RenderTransform>
                <TranslateTransform X="{Binding MyXValue}" Y="{Binding MyYValue}" />
            </Image.RenderTransform>
        </Image>
        <Canvas HorizontalAlignment="Left" Height="100" Margin="91,229,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
