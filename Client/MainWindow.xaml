<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:viewmodels="clr-namespace:Client.ViewModels"
        xmlns:views="clr-namespace:Client.Views" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Durak" Height="500" Width="650" MinHeight ="300" MinWidth="450" Icon="icon.ico">

    <Window.Resources>
        <DataTemplate x:Name="gameViewTemplate" DataType="{x:Type viewmodels:GameViewModel}">
            <views:GameView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="aboutViewTemplate" DataType="{x:Type viewmodels:AboutViewModel}">
            <views:AboutView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel  Grid.Row="0" Grid.Column="1"  Grid.RowSpan="6" Grid.ColumnSpan="5">
            <Image Source="/Resources/Background/durak.png" Stretch="Fill"/>
        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" Background="Gray">
            
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="0">
            <StackPanel>
                <Button Style="{DynamicResource DurakMenuButton}" Content="Play" Click="Play_Click"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.RowSpan="2" Grid.Column="0">
            <StackPanel>
                <Button Style="{DynamicResource DurakMenuButton}" Content="About" Click="About_Click"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.RowSpan="2" Grid.Column="0">
            <StackPanel>
                <Button Style="{DynamicResource DurakMenuButton}" Content="Help" Click="Help_Click"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="4" Grid.RowSpan="2" Grid.Column="0">
            <StackPanel>
                <Button Style="{DynamicResource DurakMenuButton}" Content="Exit" Click="Exit_Click"/>
            </StackPanel>
        </DockPanel>
        <ContentControl Grid.Row="0" Grid.Column="1"  Grid.RowSpan="6" Grid.ColumnSpan="5" Content="{Binding}"/>
    </Grid>
</Window>
