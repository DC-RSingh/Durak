<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Durak" Height="300" Width="450" MinHeight ="300" MinWidth="450" Icon="/Resources/Background/icon.png">

    <Grid>
        <Image Source="/Resources/Background/durak.png" Stretch="Fill"/>

        <Button x:Name="btnPlay" Style="{DynamicResource DurakMenuButton}" Content="Play" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="94" Height="27" Click="btnPlay_Click" />
        <Button x:Name="btnAbout" Style="{DynamicResource DurakMenuButton}" Content="About" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" Width="94" Height="27" Click="btnAbout_Click"/>
        <Button x:Name="btnHelp" Style="{DynamicResource DurakMenuButton}" Content="Help" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Width="94" Height="27"  Click="btnHelp_Click"/>
        <Button x:Name="btnExit" Style="{DynamicResource DurakMenuButton}" Content="Exit" HorizontalAlignment="Left" Margin="50,200,0,0" VerticalAlignment="Top" Width="94" Height="27" Click="btnExit_Click"/>
    </Grid>
</Window>
